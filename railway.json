{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT",
    "services": [
      {
        "env": {
          "PORT": "8080"
        }
      },
      {
        "name": "bot",
        "startCommand": "python bot.py",
        "env": {}
      }
    ]
  }
}